package edu.icesi.amelia.validation.cts.monitors

import org.amelia.dsl.lib.descriptors.Host

depends on edu.icesi.amelia.validation.cts.monitors.Monitor_3

subsystem Monitor_4
{
	param Host host
	param String name  
	
	on host
	{
		directory:
			cd "/home/carvajal/Documents/carvajal/"
			
		execute:directory;

			run "memory-monitor" -libpath #[
					"jars/monitoring.jar",
					"lib/org.pascani.dsl.lib-0.0.1-SNAPSHOT-dependencies.jar",
					"lib/new-personalized-events-with-carvajal.jar",
					"lib/slf4j-api-1.7.10.jar",
					"lib/sigar.jar"
				] -s "startMemoryMonitor" -m "startMemoryMonitoring" -p name
	}
	
}