package edu.icesi.amelia.validation.cts.subsystems

import org.amelia.dsl.lib.descriptors.Host

depends on edu.icesi.amelia.validation.cts.subsystems.Compilation

subsystem ExternalProbe {

	param Host host
	
	on host {
		directory:
			cd "/home/carvajal/Documents/carvajal"
		execution:directory;
			run "external-probe" -libpath #[
				"jars/monitoring.jar",
				"lib/org.pascani.dsl.lib-0.0.1-SNAPSHOT-dependencies.jar",
				"lib/new-personalized-events-with-carvajal.jar", 
				"lib/slf4j-api-1.7.10.jar:lib/sigar.jar"] -s "r" -m "run"
	}
	
}