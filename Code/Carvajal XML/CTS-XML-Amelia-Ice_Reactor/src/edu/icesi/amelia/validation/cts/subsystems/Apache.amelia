package edu.icesi.amelia.validation.cts.subsystems;

import org.amelia.dsl.lib.descriptors.Host

depends on Server

subsystem Apache {
	
	var String apacheDirectory = "/opt/apache-tomcat-7.0.34/bin"
	var String apacheCommand = "./startup.sh"
	
	param Host hostApache
	
	on hostApache {
		directory:	
			cd apacheDirectory
				
		execution: directory;
			cmd apacheCommand
	}
}